{
	"name": "@nciocpl/ncids-css",
	"version": "2.1.1",
	"description": "CSS library for the National Cancer Institute Design System (NCIDS)",
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/nciocpl/ncids.git",
		"directory": "packages/ncids-css"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/",
		"access": "public"
	},
	"files": [
		"packages",
		"uswds-packages",
		"uswds-img",
		"internal-uswds",
		"img"
	],
	"main": "index.scss",
	"scripts": {
		"build": "yarn run clean:build && webpack --mode='production'",
		"clean:build": "rimraf ./dist",
		"lint": "stylelint packages/**/*.scss",
		"lint:fix": "stylelint scss/**/*.scss --fix",
		"patch-uswds": "patch-package @uswds/uswds && ./scripts/sync-uswds-packages.js",
		"ncids:postinstall": "patch-package --error-on-fail && ./scripts/sync-uswds-packages.js",
		"watch": "webpack --watch"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^14.14.13",
		"@uswds/uswds": "^3.3.0",
		"copy-webpack-plugin": "^9.0.1",
		"eslint": "^7.32.0",
		"extract-loader": "^5.1.0",
		"file-loader": "^6.2.0",
		"patch-package": "^6.5.1",
		"postcss": "^8.2.1",
		"postcss-loader": "^6.1.1",
		"prettier": "^2.2.0",
		"rimraf": "^3.0.2",
		"sass": "^1.49.0",
		"sass-loader": "^12.6.0",
		"stylelint": "^13.8.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.18.0",
		"webpack": "^5.45.1",
		"webpack-cli": "^4.7.2"
	},
	"uswdsSync": {
		"internalPackages": [
			"usa-banner",
			"usa-breadcrumb",
			"usa-button",
			"usa-card",
			"usa-footer",
			"usa-site-alert",
			"usa-skipnav"
		],
		"excludePackages": [
			"usa-add-aspect",
			"usa-collection",
			"usa-date-range-picker",
			"usa-file-input",
			"usa-fonts",
			"usa-file-input",
			"usa-graphic-list",
			"usa-header",
			"usa-hero",
			"usa-language-selector",
			"usa-layout-docs",
			"usa-media-block",
			"usa-modal",
			"usa-nav",
			"usa-section",
			"usa-sidenav",
			"usa-site-title",
			"usa-time-picker",
			"usa-type-line-length",
			"usa-type-setting",
			"usa-type-spacing",
			"usa-validation",
			"uswds",
			"uswds-form-controls",
			"uswds-form-templates",
			"uswds-validation"
		]
	},
	"uswdsExcludeComments": {
		"//": "usa-content, usa-dark-background, usa-display, usa-intro, usa-link, usa-paragraph, usa-prose all required for uswds-typography.",
		"usa-add-aspect": "helper mixin, not a component",
		"usa-type-setting": "helper twig template for usa-prose only",
		"usa-type-spacing": "unused"
	}
}
