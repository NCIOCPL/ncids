{
	"name": "@nciocpl/ncids-css",
	"version": "1.3.0",
	"description": "CSS library for the National Cancer Institute Design System (NCIDS)",
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/nciocpl/ncids.git",
		"directory": "packages/ncids-css"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/",
		"access": "public"
	},
	"files": [
		"packages",
		"uswds-packages",
		"uswds-img",
		"internal-uswds",
		"img"
	],
	"main": "index.scss",
	"scripts": {
		"build": "yarn run clean:build && webpack --mode='production'",
		"clean:build": "rimraf ./dist",
		"lint": "stylelint scss/**/*.scss",
		"lint:fix": "stylelint scss/**/*.scss --fix",
		"patch-uswds": "patch-package @uswds/uswds && ./scripts/sync-uswds-packages.js",
		"ncids:postinstall": "patch-package && ./scripts/sync-uswds-packages.js",
		"watch": "webpack --watch"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^14.14.13",
		"@uswds/uswds": "^3.3.0",
		"copy-webpack-plugin": "^9.0.1",
		"eslint": "^7.32.0",
		"extract-loader": "^5.1.0",
		"file-loader": "^6.2.0",
		"patch-package": "^6.5.1",
		"postcss": "^8.2.1",
		"postcss-loader": "^6.1.1",
		"prettier": "^2.2.0",
		"rimraf": "^3.0.2",
		"sass": "^1.49.0",
		"sass-loader": "^12.6.0",
		"stylelint": "^13.8.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.18.0",
		"webpack": "^5.45.1",
		"webpack-cli": "^4.7.2"
	},
	"uswdsSync": {
		"internalPackages": [
			"usa-alert",
			"usa-card",
			"usa-banner",
			"usa-breadcrumb",
			"usa-button",
			"usa-footer",
			"usa-site-alert",
			"usa-skipnav"
		],
		"excludePackages": [
			"usa-header",
			"usa-section",
			"usa-sidenav",
			"usa-add-aspect"
		]
	}
}
