{
	"compilerOptions": {
		"target": "es2016",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"outDir": "./lib/esm",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./src/**/*.test.ts",
		"./src/**/__tests__/*"
	]
}
