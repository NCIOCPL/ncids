<div id="nci-card" class="grid-container">
	<div class="nci-card tablet-lg:grid-col-4 {{ modifier }} ">
		<a href="{{ url }}" aria-label="{{ ariaLabel }}" {{ linkMarkedInternal }}>
			<picture class="nci-card__image">
				<source media="(min-width: 880px)" srcset="{{ imageSource }}"/>
				<img src="{{ imageSrc }}" alt="{{ alt }}"/>
			</picture>
			<div class="nci-card__body">
				<span class="nci-card__title">{{ title }}</span>
				{% if description %}
					<p class="nci-card__description">
						{{ description }}
					</p>
				{% endif %}
			</div>
		</a>
	</div>
</div>
