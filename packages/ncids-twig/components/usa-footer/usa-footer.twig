{% import _self as self %}

<footer class="usa-footer usa-footer--nci-big" id="nci-footer" aria-label="Footer">
	<div class="usa-footer__nci-return-to-top">
		<a href="#top" aria-label="{{ params.back_to_top }}">
			<span>{{ params.back_to_top }}</span>
		</a>
	</div>
	<div class="usa-footer__primary-section">
		<div class="grid-container">
			<div class="grid-row grid-gap">
				<div class="tablet:grid-col-8">
					<nav class="usa-footer__nav" aria-label="Footer navigation">
						<div class="grid-row grid-gap-4">
							{% for primary_list in primary_lists %}
								<div class="mobile-lg:grid-col-6 desktop:grid-col-4">
									<section class="usa-footer__primary-content usa-footer__primary-content--collapsible">
										<div class="usa-footer__primary-link">{{ primary_list.heading }}</div>
										<ul class="usa-list usa-list--unstyled">
											{% for link in primary_list.links %}
												<li class="usa-footer__secondary-link ">
													<a href="{{ link.link_address }}"
														class="usa-link {{ link.modifier }}"
														{{ link.linkMarkedInternal }}>
															{{ link.link_text }}
													</a>
												</li>
											{% endfor %}
										</ul>
									</section>
								</div>
							{% endfor %}
						</div>
					</nav>
				</div>
				{% if signup_enabled %}
					<div class="tablet:grid-col-4">
						<div class="usa-sign-up">
							<div class="usa-sign-up__heading">{{ params.sign_up_heading }}</div>
							<form accept-charset="UTF-8" action="https://public.govdelivery.com/accounts/USNIHNCI/subscribers/qualify" aria-label="Footer subscribe" class="usa-form" id="signup" method="post" novalidate onsubmit="return false;" target="_blank">
								<input type="hidden" name="category_id" id="category_id" value="USNIHNCI_C25"/>
								<div class="usa-form-group">
									<label class="usa-label" for="email">
										{{ params.sign_up_label }}
									</label>
									<input class="usa-input" id="email" name="email" type="email" value=""/>
								</div>
								<button class="usa-button usa-button--accent-warm" type="submit">
									{{ params.sign_up_button }}
								</button>
							</form>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
	<div class="usa-footer__secondary-section">
		<div class="grid-container">
			<div class="grid-row grid-gap">
				<div class=" usa-footer__logo grid-row desktop:grid-col-5">
					<div class="mobile-lg:grid-col-auto">
						<p class="usa-footer__logo-heading">
							<span class="logo__agency-name">{{ logo_heading.main_text }}</span>
							<span class="logo__parent-organization">{{ logo_heading.sub_text }}</span>
						</p>
					</div>
				</div>
				<div class="usa-footer__contact-links desktop:grid-col-7">
					<div class="usa-footer__contact-heading">{{ params.contact_us }}</div>
					<div class="usa-footer__address">
						<div class="usa-footer__contact-info grid-row grid-gap">
							{% for link in contact_us %}
								<div class="tablet:grid-col-auto">
									<a href={{ link.link_address }}>{{ link.link_text }}</a>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			<div class="grid-row grid-gap">
				<div class="usa-footer__social-links desktop:grid-col-5">
					{% if social_media %}
					<div class="usa-footer__social-heading">{{ params.follow_us }}</div>
					<div class="grid-row grid-gap-1 nci-big__social">
						{% for link in social_media %}
							<div class="grid-col-auto">
								<a class="usa-social-link" href={{ link.link_address }}>
									{{ self.place_icon(link.icon) }}
								</a>
							</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>
				<div class="usa-footer__contact-links desktop:grid-col-7">
					<div class="usa-footer__address">
						<div class="usa-footer__contact-info grid-row grid-gap">
							<address>
								{% for link in contact_info %}
									<a href="{{ link.link_address }}">
										{{ link.link_text }}
									</a>
								{% endfor %}
							</address>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
